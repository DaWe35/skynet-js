{
  "name": "skynet-js",
  "version": "2.0.0",
  "description": "Sia Skynet Javascript Client",
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "dist/*",
    "src/*"
  ],
  "scripts": {
    "test": "jest --runInBand",
    "prepublishOnly": "babel src --out-dir dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NebulousLabs/skynet-js.git"
  },
  "keywords": [
    "sia"
  ],
  "author": "Karol Wypchlo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NebulousLabs/skynet-js/issues"
  },
  "homepage": "https://nebulouslabs.github.io/skynet-js/",
  "dependencies": {
    "axios": "^0.20.0",
    "path-browserify": "^1.0.1",
    "url-join": "^4.0.1",
    "url-parse": "^1.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "axios-mock-adapter": "^1.18.2",
    "babel-jest": "^26.0.1",
    "eslint": "^7.1.0",
    "husky": "^4.2.3",
    "jest": "^26.0.1",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2"
  }
}
